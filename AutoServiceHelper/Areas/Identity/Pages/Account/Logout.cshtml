@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form id="button" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <i type="submit" class="fas fa-sign-out-alt"></i>


            </form>
            <script>
                            setTimeout(function() {
                   document.getElementById("button").submit();
                }, 2000)
                              
            </script>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
