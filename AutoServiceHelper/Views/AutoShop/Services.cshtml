@model IEnumerable<ServiceViewModel>

@{
    ViewData["Title"] = "Services";
}
<div class="button-holder">
                            <a href="/AutoShop/ShopOffers" class="btn btn-info text-uppercase">Back to Offers</a>
                        </div>
<section class="py-2">
    <div class="container">
        <div style="padding: 0px;">          
            <div class="card-body table-responsive p-0" style="height: 500px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead class="sidebar-dark-gray">
                        <tr>
                            <th>Service Name</th>
                            <th>Working Hours</th>
                            <th>Price</th>
                            <th>Type</th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var service in Model)
                    {
                        <tbody>
                            <tr>
                                <td scope="row">@service.Name</td>
                                <td>@service.NeededHourOfWork</td>
                                <td>@service.Price</td>
                                <td>@service.Type</td>
                                  <td>
                                    <div class="button-holder">
                                        <a href="/AutoShop/RemoveService?serviceId=@service.ServiceId" class="btn btn-danger text-uppercase">Remove Service</a>
                                    </div>
                                </td>
                                <td>
                                    <div class="button-holder">
                                        <a href="/AutoShop/ServiceParts?serviceId=@service.ServiceId&offerId=@service.offerId" class="btn btn-info text-uppercase">Parts</a>
                                    </div>
                                </td>

                            </tr>

                        </tbody>
                    }
                    
                </table>                 
            </div>
        </div>
    </div>
</section>
              <div class="button-holder">
                            <a href="/AutoShop/AddService?offerId=@ViewBag.OfferId" class="btn btn-info text-uppercase">Add Service</a>
                        </div>