@model AddPartViewModel
@{
    ViewData["Title"] = "Add Part";
}
 <div class="button-holder">
                            <a href="/AutoShop/ServiceParts?serviceId=@ViewBag.serviceId" class="btn btn-info text-uppercase">Back to Parts</a>
                        </div>
<form method="post">
    <div class="form-row">
        <div>
            <input asp-for="ServiceId" class="form-control" type="hidden" id="serviceId" value="@ViewBag.serviceId">
        </div>
        <div class="form-group col-md-5">
            <div> <span asp-validation-for="Name" class="text-danger"></span></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" id="Name" placeholder="Name">
        </div>
        <div class="form-group col-md-4">
            <div> <span asp-validation-for="Number" class="text-danger"></span></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Number">Identification Number</label>
            <input asp-for="Number" class="form-control" id="Number" placeholder="Number">
        </div>
    </div>
    <div class="form-row">
          <div class="form-group col-md-2">
            <div> <span asp-validation-for="QuantitiNeeded" class="text-danger"></span></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="QuantitiNeeded">Quantiti Needed</label>
            <input asp-for="QuantitiNeeded" class="form-control" id="QuantitiNeeded" placeholder="Quantiti Needed">
        </div>
            <div class="form-group col-md-2">
            <div> <span asp-validation-for="Price" class="text-danger"></span></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" id="Price" placeholder="Price">
        </div>
    </div>
  
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>