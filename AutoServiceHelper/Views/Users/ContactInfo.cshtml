@model UserContactInfoModel

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">User Contact Information</h3>
    </div>

    <form method="post">
        <input asp-for="Id" type="text" style="display:none" id="Id" name="Id">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-md-4">
                    <div> <span asp-validation-for="PhoneNumber" class="text-danger"></span></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Enter Phone Number">
                </div>
                <div class="form-group col-md-2">
                </div>
                <div class="form-group col-md-6">
                    <div> <span asp-validation-for="City" class="text-danger"></span></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" id="City" placeholder="Enter City">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <div> <span asp-validation-for="Country" class="text-danger"></span></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label asp-for="Country"></label>
                    <input asp-for="Country" class="form-control" id="Country" placeholder="Enter Country">
                </div>
                <div class="form-group col-md-6">
                    <div> <span asp-validation-for="Address" class="text-danger"></span></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" id="Address" placeholder="Enter Address">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <div> <span asp-validation-for="Email" class="text-danger"></span></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" id="Email" placeholder="Enter Email">
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <div> <span asp-validation-for="AdditionalInfo" class="text-danger"></span></div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label asp-for="AdditionalInfo"></label>
                        <textarea asp-for="AdditionalInfo" class="form-control" rows="3" placeholder="Enter "></textarea>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>