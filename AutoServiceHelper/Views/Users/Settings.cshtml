@model UsersSetingsFormModel
@{
    ViewData["Title"] = "Settings";
}
<form method="post">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="NickName">Nick Name</label>
            @if (Model!=null&&Model.NickName != null)
            {
                <input asp-for="NickName" class="form-control" id="NickNamet" placeholder="Nick Name" value="@Model.NickName" >
            }
            @if (Model==null)
            {
                <input asp-for="NickName" class="form-control" id="NickNamet" placeholder="Nick Name" >
            }
        </div>
        <div class="form-group col-md-4">
            <label asp-for="FirstName">First Name</label>
              @if (Model!=null&&Model.FirstName != null)
            {
                <input asp-for="FirstName" class="form-control" id="FirstName" placeholder="First Name" value="@Model.FirstName" >
            }
            @if (Model == null)
            {
                <input asp-for="FirstName" class="form-control" id="FirstName" placeholder="First Name" >
            }
        </div>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="LastName">Last Name</label>
          @if (Model!=null&&Model.LastName != null)
            {
                <input asp-for="LastName" class="form-control" id="LastName" placeholder="Last Name" value="@Model.LastName" >
            }
            @if (Model==null)
            {
                <input asp-for="LastName" class="form-control" id="LastName" placeholder="Last Name" >
            }
    </div>

    <div class="form-check">
        <input asp-for="Manager" class="form-check-input" id="Manager">
        <label class="form-check-label" asp-for="Manager">Manager</label>
    </div>
    <div class="form-check">
        <input asp-for="Mechanic" class="form-check-input" id="Mechanic">
        <label class="form-check-label" asp-for="Mechanic">Mechanic</label>
    </div>

    <button type="submit" class="btn btn-primary">Apply</button>

</form>
