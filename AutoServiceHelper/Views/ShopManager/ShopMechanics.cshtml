
<div class="card card-secondary">
    <div class="card-header">
        <h3 class="card-title">Mechanics Control Panel</h3>
    </div>
    <div class="card-body">
        <section class="py-5">
            <div class="container">
                <div style="padding: 5px;">
                    <div class="card-body table-responsive p-0" style="height: 500px;">
                        <table class="table table-head-fixed text-nowrap pace-progress-color-blue">
                            <thead class="sidebar-dark-gray">
                                <tr>
                                    <th scope="col">Name</th>

                                </tr>
                            </thead>

                            @foreach (var mechanic in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td scope="row">@mechanic.Name</td>

                                        <td>
                                            <p>
                                                <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#@mechanic.Row" aria-expanded="false" aria-controls="@mechanic.Row">
                                                    Mechanic Info
                                                </button>
                                            </p>
                                            <div class="collapse" id="@mechanic.Row">
                                                <table class="table table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th style="width: 10px">#</th>
                                                            <th>Key</th>
                                                            <th>Value</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>1.</td>
                                                            <td>Email</td>
                                                            <td>@(mechanic.Email==null?"N/a":mechanic.Email) </td>
                                                        </tr>
                                                        <tr>
                                                            <td>2.</td>
                                                            <td>City</td>
                                                            <td>@(mechanic.City==null?"N/a":mechanic.City)</td>
                                                        </tr>
                                                        <tr>
                                                            <td>3.</td>
                                                            <td>Phone Number</td>
                                                            <td>@(mechanic.PhoneNumber==null?"N/a":mechanic.PhoneNumber)</td>
                                                        </tr>
                                                        @if (mechanic.Activitys.Count!=0)
                                                        {
                                                             <tr>
                                                            <td>4.</td>
                                                            <th>Activitys</th>
                                                            <th>Activity Name</th>
                                                        </tr>
                                                        @foreach (var activity in @mechanic.Activitys)
                                                        {
                                                            <tr>
                                                                <td></td>
                                                                 <td></td>
                                                                <td>@activity</td>
                                                                
                                                            </tr>
                                                        }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                            @{
                                                if (!mechanic.WorkForShop)
                                                {
                                                <td>
                                                    <div class="button-holder">
                                                        <a href="/ShopManager/HireMechanic?userId=@mechanic.Id" class="btn btn-success text-uppercase">Hire</a>
                                                    </div>
                                                </td>
                                                }
                                                else
                                                {
                                                <td>
                                                    <div class="button-holder">
                                                        <a href="/ShopManager/FireMechanic?userId=@mechanic.Id" class="btn btn-danger text-uppercase">Fire</a>
                                                    </div>
                                                </td>
                                                }
                                            }
                                    </tr>

                                </tbody>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>