
<div class="card card-secondary">
    <div class="card-header">
        <h3 class="card-title">Mechanics Control Panel</h3>
    </div>
    <div class="card-body">
        <section class="py-5">
            <div class="container">
                <div style="padding: 5px;">
                    <div class="card-body table-responsive p-0" style="height: 500px;">
                        <table class="table table-head-fixed text-nowrap pace-progress-color-blue">
                            <thead class="sidebar-dark-gray">
                                <tr>
                                    <th scope="col">Name</th>
                                   
                                </tr>
                            </thead>

                            @foreach (var mechanic in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td scope="row">@mechanic.Name</td>
                                       
                                        <td>
                                            <div class="button-holder">
                                                <a href="/ShopManager/MechanicInfo?userId=@mechanic.Id" class="btn btn-info text-uppercase">Info</a>
                                            </div>
                                        </td>
                                        @{if (!mechanic.WorkForShop)
                                        {
                                           <td>
                                            <div class="button-holder">
                                                <a href="/ShopManager/HireMechanic?userId=@mechanic.Id" class="btn btn-success text-uppercase">Hire</a>
                                            </div>
                                        </td>
                                        }
                                        else
                                        {
                                            <td>
                                            <div class="button-holder">
                                                <a href="/ShopManager/FireMechanic?userId=@mechanic.Id" class="btn btn-danger text-uppercase">Fire</a>
                                            </div>
                                        </td>
                                        }
                                       }                                       
                                    </tr>

                                </tbody>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>